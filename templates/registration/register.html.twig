{% extends 'base.html.twig' %}

{% block title %}Warelles - Inscription
{% endblock %}

{% block body %}
	<section class="section section--padding" id="contact">
		<div class="section__bg-overlay"></div>
		<h2 class="section__title-h2">Inscription</h2>

		<div class="simpleBox">
			<div class="form form--maxWidth form--flex form--supp" method="post">

				{{ form_start(registrationForm) }}

				<div class="form__label-container padding5">
					<div class="width45">
						{{ form_row(registrationForm.lastname) }}
					</div>
					<div class="width45">
						{{ form_row(registrationForm.firstname) }}
					</div>
				</div>

				<div class="padding5">
					{{ form_row(registrationForm.address) }}
				</div>

				<div class="form__label-container padding5">
					<div class="width45">
						{{ form_row(registrationForm.zipcode) }}
					</div>
					<div class="width45">
						{{ form_row(registrationForm.city) }}
					</div>
				</div>

				<div class="padding5">
					{{ form_row(registrationForm.email) }}
				</div>

				<div class="padding5">
					{{ form_label(registrationForm.plainPassword) }}

					<div
						class='danger fontSizeSmall listStyleNone'>
						<!-- Seul le texte des erreurs est rouge -->
						{{ form_errors(registrationForm.plainPassword) }}
					</div>

					{{ form_widget(registrationForm.plainPassword) }}
				</div>

				{{ form_row(registrationForm.RGPDConsent) }}

				<div class="button button--marginTop2">
					<div class="button__container button__container--flex button__container--small">
						<button class="button__link button__link--textSmall button__link--supp" type="submit">M'inscrire</button>
					</div>
				</div>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
