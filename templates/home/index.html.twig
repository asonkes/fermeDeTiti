	<section class="section section--padding" id="contact">
		<div class="section__bg-overlay"></div>
		<h2 class="section__title-h2">Nous Contacter</h2>
		<div class="dualbox">
			<div class="dualbox__container dualbox__container--resize">
				<div class="dualbox__item-left">
					<form class="form" action="contact" method="post">
						<ul class="form__ul">
							<li class="form__li">
								<label class="form__label" for="firstName">Nom:</label>
								<input class="form__input" type="text" placeholder="Entrez votre nom" id="firstname" name="user_name">
							</li>
							<li class="form__li">
								<label class="form__label" for="lastName">Prénom :</label>
								<input class="form__input" type="text" placeholder="Entrez votre nom" id="lastName" name="user_lastName">
							</li>
							<li class="form__li">
								<label class="form__label" for="mail">E-mail :</label>
								<input class="form__input" type="text" placeholder="Entrez votre addresse mail" id="mail" name="user_mail">
							</li>
							<li class="form__li">
								<label class="form__label" for="adress">Adresse :</label>
